// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #505050
color-grey = #737373
color-header-subtitle = #e6e6e6
color-border = #d2d2d2
color-link = #0065b3
color-background = #e6e6e6
color-sidebar-text = #737373
color-widget-background = #d2d2d2
color-widget-border = #d2d2d2
color-footer-background = #2f2f2f
color-mobile-nav-background = #2f2f2f
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-linkedin = #0077B5
color-google = #dd4b39

// Fonts
font-sans = "Segoe UI", "SegoeUI" ,"Segoe WP", "Helvetica Neue", "Helvetica", "Tahoma", "Arial", sans-serif
font-mono =  "SFMono-Regular", "Consolas", "Liberation Mono", "Menlo", Courier, monospace
font-serif = "Segoe UI", "SegoeUI" ,"Segoe WP", "Helvetica Neue", "Helvetica", "Tahoma", "Arial", sans-serif
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 16px
line-height = 1.6em
line-height-header-title = 1.3em
line-height-title = 1.1em

// Header
header-height = 140px
header-title-size = 18px
subtitle-size = 14px
ms-logo-width = 124px
ms-logo-height = 56px
ms-logo-url = "images/logo.png"
/* banner-height = 300px */
/* banner-height = 140px */
/* banner-url = "images/banner.jpg" */
/* logo-size = 40px */

sidebar = hexo-config("sidebar")

// Layout
block-margin = 50px
article-padding = 20px
mobile-nav-width = 280px
main-column = 10
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"